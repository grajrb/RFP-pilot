# Database Configuration
# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/rfp_system
DATABASE_URL=postgres://postgres:Root@localhost:5432/rfp_db
# OpenRouter API Configuration (Free Tier Available)
# Get your API key from https://openrouter.ai/keys
# Supports GPT-3.5-turbo, GPT-4, Claude, Llama, and more
OPENROUTER_API_KEY=sk-or-...

# HTTP Referer (required by OpenRouter)
HTTP_REFERER=http://localhost:5173
# Email Configuration (Optional)
# Set EMAIL_DEMO_MODE=true to log emails to console instead of sending
EMAIL_DEMO_MODE=true

# SMTP Server Details (only needed if EMAIL_DEMO_MODE=false)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
# Use app-specific password, not your main password
EMAIL_SMTP_PASS=your-app-password

# Sender Email Address
EMAIL_FROM=noreply@rfp-system.local

# Server Configuration
# Port for the Express server
SERVER_PORT=5000

# Node Environment
NODE_ENV=development
