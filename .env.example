# Database Configuration
# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/rfp_system
DATABASE_URL=postgresql://user:password@localhost:5432/rfp_system

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Email Configuration (Optional)
# Without these settings, emails will be logged to console only

# SMTP Server Details
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
# Use app-specific password, not your main password
EMAIL_SMTP_PASS=your-app-password

# Sender Email Address
EMAIL_FROM=noreply@rfp-system.local

# Server Configuration
# Port for the Express server
SERVER_PORT=5000

# Node Environment
NODE_ENV=development
